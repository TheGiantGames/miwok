<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFF7DA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/numbers_textview"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:background="#FD8E09"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="Numbers"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/family_members_textview"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:background="#379237"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="Family Members"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/colours_textView"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:background="#1A237E"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Colours" />

        <TextView
            android:id="@+id/phrases_textView"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:background="#16AFCA"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="Phrases"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>